{% extends "layouts/app.twig" %}

{% block title %}Daftar Fakultas
{% endblock %}

{% block header %}
	<h1 class="text-3xl font-bold text-gray-800">Daftar Fakultas</h1>
{% endblock %}

{% block content %}
	<section class="container mx-auto text-gray-700">
		{% include "partials/flash-message.twig" %}
		<a href="{{ url_for('faculty.create') }}" class="focus:outline-none inline-block bg-gray-700 text-white px-4 py-2 rounded hover:bg-gray-800 mb-4">Tambah Fakultas</a>
		<div class="overflow-x-auto">
			<table class="w-full text-left border border-gray-400">
				<thead class="border-b-2 border-gray-400">
					<th class="px-2 py-1">Kode Fakultas</th>
					<th class="px-2 py-1">Nama Fakultas</th>
					<th>Aksi</th>
				</thead>
				<tbody>
					{% for faculty in faculties %}
						<tr>
							<td class="px-2 py-1 border-b border-gray-400">{{ faculty.faculty_code }}</td>
							<td class="px-2 py-1 border-b border-gray-400">{{ faculty.name }}</td>
							<td class="px-2 py-1 border-b border-gray-400">
								<a href="{{ url_for('faculty.edit', {'id': faculty.faculty_code}) }}" title="Ubah">
									<i class="fa fa-pencil"></i>
								</a>
								<form class="inline-block ml-2 text-red-600" action="{{ url_for('faculty.destroy', {'id': faculty.faculty_code}) }}" onclick="return confirm('Yakin mau menghapus? Data akan terhapus permanen')" method="POST">
									<button title="Hapus">
										<i class="fa fa-trash"></i>
									</button>
								</form>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</section>
{% endblock %}
