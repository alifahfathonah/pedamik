{% extends "layouts/app.twig" %}

{% block title %}Kelas Dosen
{% endblock %}

{% block header %}
	<h1 class="text-3xl font-bold text-gray-800">Kelas Dosen {{lecturer.name}} / {{lecturer.nidn}}</h1>
{% endblock %}

{% block content %}
	<section class="container mx-auto text-gray-700">
		{% include "partials/flash-message.twig" %}
		<a href="{{ url_for('lecturer.teach.create', {'id': lecturer.id}) }}" class="focus:outline-none inline-block bg-gray-700 text-white px-4 py-2 rounded hover:bg-gray-800 mb-4">Tambah Kelas</a>
		<div class="overflow-x-auto">
			<table class="w-full text-left border border-gray-400">
				<thead class="border-b-2 border-gray-400">
					<th width="120" class="px-2 py-1">Mata Kuliah</th>
					<th class="px-2 py-1">Kelas</th>
					<th class="px-2 py-1">Semester</th>
					<th class="px-2 py-1">Fakultas</th>
					<th class="px-2 py-1">Jurusan</th>
					<th class="px-2 py-1">Hari Ajar</th>
					<th class="px-2 py-1">Tahun Ajar</th>
					<th class="px-2 py-1">Jml. Mhs</th>
					<th class="text-center">Aksi</th>
				</thead>
				<tbody>
					{% for teach in teaches %}
						<tr>
						<td class="px-2 py-1 border-b border-gray-400">{{ teach.course_name }}</td>
							<td class="px-2 py-1 border-b border-gray-400">{{ teach.class_name }}</td>
							<td class="px-2 py-1 border-b border-gray-400">{{ teach.semester }}</td>
							<td class="px-2 py-1 border-b border-gray-400">{{ teach.faculty_name }}</td>
							<td class="px-2 py-1 border-b border-gray-400">{{ teach.department_name }}</td>
							<td class="px-2 py-1 border-b border-gray-400">{{ teach.day }}</td>
							<td class="px-2 py-1 border-b border-gray-400">{{ teach.year }}</td>
							<td class="px-2 py-1 border-b border-gray-400">{{ teach.student_amount }}</td>
							<td width="100" class="px-2 py-1 border-b border-gray-400 text-xs">
								<form class="inline-block ml-2 text-red-600" action="{{ url_for('lecturer.teach.destroy', {'id': teach.id}) }}" onclick="return confirm('Yakin mau menghapus? Data akan terhapus permanen')" method="POST">
									<button title="Hapus" class="bg-red-300 py-1 px-2 rounded">
										<i class="fa fa-trash"></i>
										Hapus
									</button>
								</form>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</section>
{% endblock %}
